#--- SSH Settings ------------------------------
SSH_ENV="$HOME/.ssh/environment"
SSH_TOOLS_PATH={{core.ssh_tools_path}}

function start_agent {
  echo "Initializing new SSH agent..."
  $SSH_TOOLS_PATH/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
  echo succeeded
  chmod 600 "${SSH_ENV}"
  . "${SSH_ENV}" > /dev/null
  $SSH_TOOLS_PATH/ssh-add "$HOME/.ssh/{{{my.main_ssh_key}}}";
}
if [ -f "${SSH_ENV}" ]; then
  . "${SSH_ENV}" > /dev/null
  #ps ${SSH_AGENT_PID} doesn't work under cywgin
  ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
    start_agent;
  }
else
  start_agent;
fi
#--- END SSH Settings ------------------------------
